{
    "name": "svelte-daisyui-components",
    "description": "Svelte components for the daisyUI component library.",
    "version": "0.0.4",
    "author": "Martijn Schermers",
    "scripts": {
        "dev": "vite dev",
        "preview": "vite preview",
        "build": "svelte-kit sync && svelte-package",
        "prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
        "test": "playwright test",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test:unit": "vitest",
        "lint": "prettier --plugin-search-dir . --check .",
        "format": "prettier --plugin-search-dir . --write ."
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/martijnschermers/svelte-daisyui-components.git"
    },
    "license": "MIT",
    "dependencies": {
        "svelte": "^4.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.28.1",
        "@sveltejs/adapter-auto": "^1.0.0",
        "@sveltejs/kit": "^1.20.4",
        "@sveltejs/package": "^1.0.0",
        "autoprefixer": "^10.4.13",
        "daisyui": "^3.0.0",
        "postcss": "^8.4.20",
        "prettier": "^2.8.0",
        "prettier-plugin-svelte": "^2.10.1",
        "svelte": "^4.0.0",
        "svelte-check": "^3.4.3",
        "tailwindcss": "^3.2.4",
        "tslib": "^2.4.1",
        "typescript": "^5.0.0",
        "vite": "^4.0.0",
        "vitest": "^0.25.3"
    },
    "type": "module"
}
